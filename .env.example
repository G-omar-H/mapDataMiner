# =================================================================
# MapDataMiner Environment Configuration
# =================================================================
# Copy this file to .env.local and fill in your actual values
# Never commit .env.local to version control!

# =================================================================
# GOOGLE MAPS API CONFIGURATION
# =================================================================
# Required for Google Maps scraping and enhanced map features
# Get your API key from: https://console.cloud.google.com/apis/credentials
# Enable: Maps JavaScript API, Places API, Geocoding API
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# =================================================================
# MAPBOX CONFIGURATION
# =================================================================
# Required for interactive map visualization
# Get your access token from: https://account.mapbox.com/access-tokens/
MAPBOX_ACCESS_TOKEN=pk.your_mapbox_access_token_here

# =================================================================
# GOOGLE SHEETS API CONFIGURATION
# =================================================================
# Required for direct Google Sheets export functionality
# Get credentials from: https://console.cloud.google.com/apis/credentials
# Enable: Google Sheets API, Google Drive API

# Service Account Email (from your JSON credentials file)
GOOGLE_CLIENT_EMAIL=your-service-account@your-project.iam.gserviceaccount.com

# Private Key (from your JSON credentials file)
# NOTE: Keep the quotes and line breaks as they appear in the JSON file
GOOGLE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_CONTENT_HERE\n-----END PRIVATE KEY-----\n"

# Google Cloud Project ID
GOOGLE_PROJECT_ID=your-google-cloud-project-id

# =================================================================
# SCRAPING CONFIGURATION
# =================================================================
# Customize scraping behavior and performance

# Delay between requests (milliseconds) - helps avoid rate limiting
SCRAPING_DELAY_MIN=1000
SCRAPING_DELAY_MAX=3000

# Maximum number of concurrent scraping processes
MAX_CONCURRENT_SCRAPERS=3

# Maximum number of businesses to scrape per search (0 = unlimited)
MAX_BUSINESSES_PER_SEARCH=100

# Scraping timeout (milliseconds)
SCRAPING_TIMEOUT=30000

# Browser configuration
PUPPETEER_HEADLESS=true
PUPPETEER_DISABLE_SANDBOX=true

# =================================================================
# APPLICATION CONFIGURATION
# =================================================================
# General application settings

# Environment (development, production, test)
NODE_ENV=development

# Application URL (used for API callbacks and links)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Default search radius (meters)
DEFAULT_SEARCH_RADIUS=5000

# Enable/disable features
ENABLE_REAL_SCRAPING=false
ENABLE_GOOGLE_SHEETS_EXPORT=false
ENABLE_ANALYTICS=false

# =================================================================
# SECURITY & RATE LIMITING
# =================================================================
# Security and performance configurations

# Rate limiting (requests per minute per IP)
RATE_LIMIT_RPM=10

# API key for internal services (generate a random string)
API_SECRET_KEY=your-random-secret-key-here

# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com

# =================================================================
# DATABASE CONFIGURATION (Optional)
# =================================================================
# If you want to store scraped data persistently

# Database URL (PostgreSQL, MySQL, etc.)
# DATABASE_URL=postgresql://username:password@localhost:5432/mapdataminer

# Redis URL (for caching and job queues)
# REDIS_URL=redis://localhost:6379

# =================================================================
# MONITORING & ANALYTICS (Optional)
# =================================================================
# Third-party service integrations

# Sentry DSN for error tracking
# SENTRY_DSN=https://your-sentry-dsn-here

# Google Analytics Measurement ID
# NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Mixpanel Project Token
# NEXT_PUBLIC_MIXPANEL_TOKEN=your-mixpanel-token

# =================================================================
# EMAIL CONFIGURATION (Optional)
# =================================================================
# For sending export notifications or alerts

# SMTP configuration
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password
# SMTP_FROM=noreply@yourdomain.com

# =================================================================
# WEBHOOK CONFIGURATION (Optional)
# =================================================================
# For integration with external services

# Webhook URL for scraping completion notifications
# WEBHOOK_URL=https://your-webhook-endpoint.com/notify

# Webhook secret for verification
# WEBHOOK_SECRET=your-webhook-secret

# =================================================================
# FEATURE FLAGS (Optional)
# =================================================================
# Toggle features on/off without code changes

# Enable experimental features
ENABLE_EXPERIMENTAL_FEATURES=false

# Enable debug logging
DEBUG_MODE=false

# Enable beta features
ENABLE_BETA_FEATURES=false
